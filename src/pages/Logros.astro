    <Footer />
</Layouts>

<style>
    section {
        display: flex;
        justify-content: space-evenly;
        margin: 0 calc(100% - 88%);
        background-color: #23262d;
        border-radius: 8px;
        color: rgb(30, 27, 31);
        height: 100vh;
        flex-direction: column;
        padding: 0 2rem;
    }
    h1 {
        display: grid;
        color: #23262d;
        font-size: 4rem;
    }
    h2 {
        display: inline-block;
        color: #23262d;
    }
    div {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(32ch, 1fr));
        gap: 2rem;
    }
    li {
        list-style: none;
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 1px;
        color: #23262d;
        background-image: none;
        background-size: 400%;
        border-radius: 7px;
        background-position: 50%;
        transition: background-position 2s cubic-bezier(0.22, 1, 0.36, 1);
        /* box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1); */
    }
    li > a {
        width: 100%;
        text-decoration: none;
        line-height: 1.4;
        padding: calc(1.5rem - 1px);
        border-radius: 8px;
        color: #23262d;
        opacity: 0.8;
    }
    li:is(:hover, :focus-within) {
        background-position: 0;
        background-image: var(--accent-gradient);
    }
    li:is(:hover, :focus-within) h2 {
        color: #23262d;
    }

    /* Estilos para timeline */
    .timeline {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .timeline-item {
        display: flex;
        align-items: flex-start;
        gap: 1rem;
    }

    .timeline-point {
        width: 12px;
        height: 12px;
        background-color: #374151;
        border-radius: 50%;
        margin-top: 8px;
    }

    .timeline-content {
        max-width: 600px;
    }

    .timeline-content p {
        font-size: 14px;
        font-weight: normal;
        line-height: 1.4;
        color: #6b7280; /* text-metal-400 */
    }

    .timeline-content h1 {
        font-size: 18px;
        font-weight: 500;
        color: #111827; /* text-metal-900 */
    }

    .timeline-content img {
        margin-top: 16px;
        display: block;
        border-radius: 12px;
        width: 100%;
        max-width: 400px;
    }

    /* Modo oscuro */
    @media (prefers-color-scheme: dark) {
        .timeline-content p {
            color: #d1d5db; /* text-metal-300 */
        }
        .timeline-content h1 {
            color: white;
        }
    }
</style>
